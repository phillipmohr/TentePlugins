{% sw_extends '@Storefront/storefront/utilities/alert.html.twig' %}

{# Change success icon #}
{% block utilities_alert_icon %}
    {% if icon != "false" %}
        {% set iconCacheSystem = config('core.storefrontSettings.iconCache') %}
        {% if iconCache === false and iconCacheSystem === true %}
            {{ sw_icon_cache_disable() }}
        {% endif %}
        {% if type == "danger" %}
            {% sw_icon 'blocked' %}
        {% elseif type == "warning" %}
            {% sw_icon 'warning' %}
        {% elseif type == "info" %}
            {% sw_icon 'info' %}
        {% elseif type == "success" %}
            <svg xmlns="http://www.w3.org/2000/svg" width="17.268" height="12.335" viewBox="0 0 17.268 12.335" class="icon">
                <path id="check-solid" d="M16.832,96.386a1.235,1.235,0,0,1,0,1.746L6.965,108a1.235,1.235,0,0,1-1.746,0L.286,103.065a1.235,1.235,0,1,1,1.746-1.746l4.062,4.058,9-8.991a1.235,1.235,0,0,1,1.746,0Z" transform="translate(0.075 -96.025)" fill="#fff"/>
            </svg>
        {% else %}
            {% sw_icon 'alert' %}
        {% endif %}
        {% if iconCache == false and iconCacheSystem === true %}
            {{ sw_icon_cache_enable() }}
        {% endif %}
    {% endif %}
{% endblock %}
