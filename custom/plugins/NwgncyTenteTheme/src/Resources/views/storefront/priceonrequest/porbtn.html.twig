{% sw_extends '@Storefront/storefront/priceonrequest/porbtn.html.twig' %}
{% block nimbits_page_product_detail_por_button %}
        {% if customizedProductsTemplate and customizedProductsTemplate.active %}
            <button
                    class="btn btn-secondary btn-block btn-buy btn-nb-pricerequest-detail-cpext"
                    {% if customizedProductsTemplate.confirmInput %} disabled="disabled" {% endif %}
                    title="{{ 'detail.sendQuoteRequest'|trans }}">
                {{ 'detail.sendQuoteRequest'|trans }}
            </button>
        {% else %}
            <div
                    class="btn btn-block btn-nb-pricerequest-detail btn-secondary"
                    title="{{ 'detail.sendQuoteRequest'|trans }}"
                    data-toggle="modal"
                    data-ajax-modal
                    data-url="{{ path('frontend.action.nimbits.price-request-modal') }}">
                {{ 'detail.sendQuoteRequest'|trans }}
            </div>
        {% endif %}
{% endblock %}